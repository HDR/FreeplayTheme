<theme>

	<formatVersion>4</formatVersion>

	<view name="system">
	
		<carousel name="systemcarousel">
			<pos>-0.5 0.1</pos>
			<size>2 0.85</size>
			<color>626262</color>
			<logoSize>0.26 0.39</logoSize>
			<logoScale>3 3</logoScale>
		</carousel>
		
		<text name="systemInfo">
			<pos>0.0 0.02</pos>
			<color>ffffff</color>
			<fontPath>./_inc/fonts/Square.ttf</fontPath>
			<fontSize>0.1</fontSize>
		</text>

		<image name="background_color" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<color>626262</color>
		</image>

		<image name="background_help" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0 1</origin>
			<pos>0 0.85</pos>
			<size>1 0.1</size>
			<color>FFFFFF99</color>
		</image>

		<helpsystem name="help">
			<textColor>000000</textColor>
			<iconColor>000000</iconColor>
			<fontPath>./_inc/fonts/Square.ttf</fontPath>
			<fontSize>0.04</fontSize>
		</helpsystem>

	</view>

	<view name="basic">
	
		<image name="background_color" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<color>626262</color>
		</image>

		<image name="background_pattern" extra="true">
			<path>./_inc/images/bg_pattern.png</path>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<color>aeaeae</color>
			<tile>true</tile>
		</image>

		<image name="background_help" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0 1</origin>
			<pos>0 1</pos>
			<size>1 0.070</size>
			<color>FFFFFF99</color>
		</image>
		
		<helpsystem name="help">
			<textColor>000000</textColor>
			<iconColor>000000</iconColor>
			<fontPath>./_inc/fonts/Square.ttf</fontPath>
			<fontSize>0.03</fontSize>
		</helpsystem>

		<image name="background_logo" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 0.18</size>
			<color>FFFFFF99</color>
		</image>

			<image name="logo">
				<origin>0.5 0.5</origin>
				<pos>0.5 0.09</pos>
				<maxSize>0.4 0.16</maxSize>
			</image>

		<image name="background_gamelist" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0 0</origin>
			<pos>0.05 0.2</pos>
			<size>0.9 0.71</size>
			<color>FFFFFF99</color>
		</image>

			<textlist name="gamelist">
			    <pos>0.034 0.235</pos>
			    <size>0.933 0.647</size>
			    <alignment>center</alignment>
			    <horizontalMargin>0.01</horizontalMargin>
			    <fontPath>./_inc/fonts/Square.ttf</fontPath>
			    <fontSize>0.04</fontSize>
			    <selectorColor>350648</selectorColor>
			    <selectedColor>bc14ff</selectedColor>
			    <primaryColor>ffffff</primaryColor>
			    <secondaryColor>871F78</secondaryColor>
			    <forceUppercase>1</forceUppercase>
			</textlist>

	</view>

	<view name="detailed">
	
		<image name="background_color" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<color>626262</color>
		</image>

		<image name="background_pattern" extra="true">
			<path>./_inc/images/bg_pattern.png</path>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<color>aeaeae</color>
			<tile>true</tile>
		</image>

		<image name="background_help" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0 1</origin>
			<pos>0 1</pos>
			<size>1 0.070</size>
			<color>FFFFFF99</color>
		</image>
		
		<helpsystem name="help">
			<textColor>000000</textColor>
			<iconColor>000000</iconColor>
			<fontPath>./_inc/fonts/Square.ttf</fontPath>
			<fontSize>0.03</fontSize>
		</helpsystem>
		
		<image name="background_logo_gamelist" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0 0</origin>
			<pos>0.01 0.02</pos>
			<size>0.35 0.89</size>
			<color>FFFFFF99</color>
		</image>

			<image name="logo">
				<origin>0.5 0.5</origin>
				<pos>0.186 0.14</pos>
				<maxSize>0.33 0.19</maxSize>
			</image>

			<textlist name="gamelist">
				<selectorColor>000000</selectorColor>
				<selectedColor>FFFFFF</selectedColor>
				<primaryColor>000000</primaryColor>
				<secondaryColor>626262</secondaryColor>
				<fontPath>./_inc/fonts/Square.ttf</fontPath>
				<pos>0.02 0.25</pos>
				<size>0.33 0.64</size>
				<fontSize>0.04</fontSize>
				<horizontalMargin>0.01</horizontalMargin>
			</textlist>
		
		<image name="background_image" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0 0</origin>
			<pos>0.37 0.02</pos>
			<size>0.65 0.62</size>
			<color>A9A9A999</color>
		</image>

			<image name="md_image">
				<origin>0.5 0.5</origin>
				<pos>0.68 0.48</pos>
				<maxSize>0.63 0.88</maxSize>
			</image>
		

	</view>

</theme>
